@model MailTicketAzureMvc.Models.IndexProViewModel

@{
    ViewBag.Title = "Cambia mail di riferimento";
}

<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("IndexPro", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Form Cambia password</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2 control-label">
                Email corrente
            </div>
            <div class="col-md-10">

                @ViewBag.OldEmail
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NewEmail, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.NewEmail, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cambia Email" class="btn btn-default" />
            </div>
        </div>
        }
